@{
    Layout = "_Layout";
    var status = ViewData["StatusCode"] ?? 404;
    var brokenPath = ViewData["OriginalPath"] as string;
    var brokenQuery = ViewData["OriginalQuery"] as string;
}

<main role="main" class="container py-5" aria-live="polite">
    <div class="text-center">
        <h1 class="display-1 fw-bold">404</h1>
        <p class="lead">No encontramos la dirección que escribiste.</p>
        <p class="text-muted">Código: @status</p>
        @if (!string.IsNullOrWhiteSpace(brokenPath))
        {
            <p class="text-muted small">Ruta solicitada: <code>@brokenPath@brokenQuery</code></p>
        }

        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3 my-4">
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index"><i class="bi bi-house me-1"></i>Volver al inicio</a>
            <a class="btn btn-outline-dark" asp-controller="Producto" asp-action="Index"><i class="bi bi-box me-1"></i>Ir al catálogo</a>
            <a class="btn btn-outline-secondary" asp-controller="Carrito" asp-action="Index"><i class="bi bi-bag me-1"></i>Ver carrito</a>
        </div>

        <div class="card card-soft mx-auto" style="max-width: 640px;">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">¿Por qué estoy viendo esto?</h5>
                <ul class="text-start text-muted mb-4">
                    <li>El enlace que abriste está mal escrito o ya no existe.</li>
                    <li>La página cambió de lugar después de la última actualización.</li>
                    <li>No tienes permisos para acceder a ese recurso.</li>
                </ul>
                <p class="mb-0">Si necesitas ayuda, escríbenos a <a href="mailto:soporte@snackgol.dev">soporte@snackgol.dev</a>.</p>
            </div>
        </div>
    </div>
</main>