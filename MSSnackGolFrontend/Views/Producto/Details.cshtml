@model LibraryConnection.Dtos.ProductDto
@{
    ViewData["Title"] = Model?.name ?? "Detalle de producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var co = new System.Globalization.CultureInfo("es-CO");
    var isAdmin = User?.Identity?.IsAuthenticated == true && (User?.IsInRole("Admin") ?? false);
    var img = Model?.image_url;
    var hasImage = !string.IsNullOrWhiteSpace(img);
    var resolvedImage = hasImage ? img : "https://via.placeholder.com/900x600?text=SnackGol";
}

<div class="container py-4 py-lg-5">
    <div class="row gy-4 align-items-center">
        <div class="col-lg-6">
            <div class="ratio ratio-4x3 rounded-4 overflow-hidden shadow-sm bg-body-tertiary">
                <img src="@resolvedImage" alt="@Model?.name" class="w-100 h-100 object-fit-cover" loading="lazy" onerror="this.onerror=null;this.src='https://via.placeholder.com/900x600?text=SnackGol';" referrerpolicy="no-referrer" />
            </div>
        </div>
        <div class="col-lg-6">
            <span class="pill mb-3 d-inline-flex align-items-center gap-2"><i class="bi bi-eye"></i>Detalle del producto</span>
            <h2 class="fw-bold mb-2">@Model?.name</h2>
            @if (!string.IsNullOrWhiteSpace(Model?.description))
            {
                <p class="lead text-muted">@Model!.description</p>
            }
            <div class="d-flex flex-column gap-2 mb-4">
                <div><span class="text-muted">Precio:</span> <span class="fs-4 fw-semibold text-primary">@Model?.price.ToString("C0", co)</span></div>
                <div>
                    <span class="text-muted">Disponibilidad:</span>
                    <span class="fw-semibold @(Model?.stock > 0 ? "text-success" : "text-danger")">@(Model?.stock > 0 ? $"Stock: {Model!.stock}" : "Agotado")</span>
                </div>
                <div><span class="text-muted">Categoría:</span> <span class="fw-semibold">@Model?.category_id</span></div>
            </div>

            @if (!isAdmin)
            {
                <form asp-controller="Carrito" asp-action="AddItem" method="post" class="d-flex flex-column flex-sm-row gap-3 align-items-sm-end mb-4">
                    <input type="hidden" name="productId" value="@Model?.id" />
                    <div>
                        <label for="quantity" class="form-label">Cantidad</label>
                        <input class="form-control" type="number" name="quantity" min="1" max="@(Math.Max(Model?.stock ?? 1, 1))" value="1" />
                    </div>
                    <button class="btn btn-primary btn-lg" type="submit" @(Model?.stock > 0 ? string.Empty : "disabled")>
                        <i class="bi bi-bag-plus me-2"></i>Agregar al carrito
                    </button>
                </form>
            }
            else
            {
                <div class="alert alert-warning d-flex align-items-start gap-2 mb-4">
                    <i class="bi bi-eye-fill mt-1"></i>
                    <div>
                        Estás viendo la misma ficha que verá un cliente. Usa una cuenta cliente para completar compras reales.
                    </div>
                </div>
            }

            <div class="d-flex flex-wrap gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al catálogo
                </a>
                @if (isAdmin)
                {
                    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-outline-primary">
                        <i class="bi bi-pencil-square me-1"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.id" class="btn btn-outline-danger">
                        <i class="bi bi-trash me-1"></i>Eliminar
                    </a>
                }
            </div>
        </div>
    </div>
</div>
