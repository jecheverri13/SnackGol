@{
    ViewData["Title"] = "Pago Fallido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 py-lg-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh;">
        <div class="text-center">
            <div class="mb-4">
                <i class="bi bi-x-circle" style="font-size: 5rem; color: #dc3545;"></i>
            </div>
            <h1 class="fw-bold mb-2">Error en el Pago</h1>
            <p class="text-muted fs-5 mb-4">No pudimos procesar tu pago. Verifique los datos e intente nuevamente.</p>

            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <p class="text-muted mb-4">Si el problema persiste, contáctanos a través de nuestro centro de soporte.</p>

            <div class="d-flex gap-2 justify-content-center flex-wrap">
                <a href="~/Carrito" class="btn btn-primary">
                    <i class="bi bi-arrow-left me-2"></i>Volver al Carrito
                </a>
                <a href="~/Pago/ConfirmarPago" class="btn btn-outline-warning">
                    <i class="bi bi-arrow-clockwise me-2"></i>Reintentar Pago
                </a>
                <a href="~/" class="btn btn-outline-secondary">
                    <i class="bi bi-house me-2"></i>Volver al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
