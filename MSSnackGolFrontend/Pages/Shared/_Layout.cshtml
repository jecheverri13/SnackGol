<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SnackGOL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @{
        bool isAdmin = User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin");
    }
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">SnackGOL</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/Home">Inicio</a>
                <a class="nav-link" href="/Carrito">Carrito</a>
                <a class="nav-link" href="/Producto">Producto</a>
                @if (isAdmin)
                {
                    <a class="nav-link" asp-area="" asp-controller="AdminPedidos" asp-action="Index">Pedidos nuevos</a>
                }
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="bg-light text-center py-3 mt-5">
        <div class="container">
            <span class="text-muted">&copy; 2025 SnackGOL</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>