<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(string.IsNullOrWhiteSpace(ViewData["Title"] as string) ? "SnackGol" : $"{ViewData["Title"]} · SnackGol")</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MSSnackGolFrontend.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        string controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? string.Empty;
        string action = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
        bool isAuthenticated = User?.Identity?.IsAuthenticated == true;
        bool isAdmin = isAuthenticated && (User?.IsInRole("Admin") ?? false);
        bool isClient = isAuthenticated && !isAdmin;
        string displayName = User?.Identity?.Name ?? "Cuenta";
        Func<string, string?, string> navClass = (expectedController, expectedAction) =>
        {
            if (!controller.Equals(expectedController, StringComparison.OrdinalIgnoreCase))
            {
                return string.Empty;
            }

            if (!string.IsNullOrEmpty(expectedAction) && !action.Equals(expectedAction, StringComparison.OrdinalIgnoreCase))
            {
                return string.Empty;
            }

            return " active";
        };
    }
    <header class="main-nav shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cup-hot me-2"></i>SnackGol
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Cambiar navegación">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                        @if (!isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="catalogo">Catálogo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="contacto">Contacto</a>
                            </li>
                        }
                        else if (isClient)
                        {
                            <li class="nav-item">
                                <a class="nav-link@(navClass("Home", "Index"))" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link@(navClass("Producto", null))" asp-area="" asp-controller="Producto" asp-action="Index">Catálogo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link@(navClass("Pedidos", null))" asp-area="" asp-controller="Pedidos" asp-action="Index">
                                    <i class="bi bi-bag-check me-1"></i>Mis pedidos
                                </a>
                            </li>
                            <li class="nav-item" id="carritoNavItem">
                                <a class="nav-link@(navClass("Carrito", null))" asp-area="" asp-controller="Carrito" asp-action="Index">Carrito</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="contacto">Contacto</a>
                            </li>
                        }
                        else if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link@(navClass("Home", "Index"))" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link@(navClass("Producto", null))" asp-area="" asp-controller="Producto" asp-action="Index">Inventario</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link@(navClass("AdminPedidos", "Index"))" asp-area="" asp-controller="AdminPedidos" asp-action="Index">Pedidos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="contacto">Contacto</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-eye me-1"></i>Vista cliente
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Inicio (landing)</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="catalogo">Catálogo público</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Carrito" asp-action="Index">Carrito</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <div class="d-flex mt-3 mt-lg-0 ms-lg-4 gap-2 align-items-center flex-wrap">
                        <a class="btn btn-outline-light" asp-area="" asp-controller="Home" asp-action="Privacy">Aviso de Privacidad</a>
                        @if (isAdmin)
                        {
                            <a class="btn btn-outline-light" asp-area="" asp-controller="Producto" asp-action="Create">
                                <i class="bi bi-plus-circle me-1"></i>Nuevo producto
                            </a>
                        }
                        @if (isAuthenticated)
                        {
                            <span class="text-light d-none d-lg-inline me-2">
                                <i class="bi bi-person-circle me-1"></i>@displayName
                                <small class="text-uppercase ms-1">@(isAdmin ? "ADMIN" : "CLIENTE")</small>
                            </span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="bi bi-box-arrow-right me-1"></i>Cerrar sesión
                                </button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Iniciar sesión
                            </a>
                        }
                        @if (isClient)
                        {
                            <a class="btn btn-primary" asp-area="" asp-controller="Carrito" asp-action="Index">
                                <i class="bi bi-bag-check me-1"></i>Finalizar compra
                            </a>
                        }
                        else if (isAdmin)
                        {
                            <a class="btn btn-primary" asp-area="" asp-controller="AdminPedidos" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i>Ir al panel
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="page-wrapper">
        <main class="flex-grow-1 pb-5 pb-lg-4" role="main">
            <div class="position-relative">
                @RenderBody()
            </div>
        </main>
        <footer class="footer mt-auto">
            <div class="container py-4">
                <div class="row gy-3 align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <span class="fw-semibold">SnackGol</span> · Energía para cada jugada
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
                        <span class="mx-2">•</span>
                        <span>&copy; @DateTime.UtcNow.Year SnackGol</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
