@{
    ViewData["Title"] = "Pago Exitoso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 py-lg-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh;">
        <div class="text-center">
            <div class="mb-4">
                <i class="bi bi-check-circle" style="font-size: 5rem; color: #28a745;"></i>
            </div>
            <h1 class="fw-bold mb-2">¡Pago Exitoso!</h1>
            <p class="text-muted fs-5 mb-4">Tu transacción ha sido procesada correctamente.</p>
            
            @if (ViewBag.CodigoConfirmacion != null)
            {
                <div class="card border-success mb-4" style="max-width: 400px; margin: 0 auto;">
                    <div class="card-body">
                        <p class="mb-2 text-muted">Código de Confirmación:</p>
                        <p class="fw-bold fs-6">@ViewBag.CodigoConfirmacion</p>
                    </div>
                </div>
            }

            <p class="text-muted mb-4">Te enviaremos un correo de confirmación con los detalles de tu pedido.</p>

            <div class="d-flex gap-2 justify-content-center">
                <a href="~/Pedidos" class="btn btn-primary">
                    <i class="bi bi-bag-check me-2"></i>Ver Mis Pedidos
                </a>
                <a href="~/" class="btn btn-outline-secondary">
                    <i class="bi bi-house me-2"></i>Volver al Inicio
                </a>
            </div>
        </div>
    </div>
</div>
