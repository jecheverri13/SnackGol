@{
    ViewData["Title"] = "Carrito de Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <!-- Encabezado del carrito -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Tu Carrito de Compras</h2>
        <a href="~/" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Seguir comprando
        </a>
    </div>

    <!-- Resumen del pedido -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Productos en el carrito -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Productos en tu carrito</h5>
                </div>
                <div class="card-body p-0">
                    <!-- Producto 1 -->
                    <div class="row g-0 p-3 align-items-center border-bottom">
                        <div class="col-auto" style="width: 100px;">
                            <div class="border bg-light d-flex align-items-center justify-content-center rounded" style="height: 80px;">
                                <small class="text-muted">Imagen</small>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card-body py-1">
                                <h6 class="card-title mb-1">Producto 1</h6>
                                <p class="card-text text-muted small mb-2">Venta definitiva - No se aceptan devoluciones</p>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    <div class="d-flex align-items-center">
                                        <label class="form-label me-2 mb-0">Cantidad:</label>
                                        <input type="number" min="1" value="3" class="form-control form-control-sm" style="width: 70px;" />
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                    <div class="form-check ms-2">
                                        <input class="form-check-input" type="checkbox" value="" id="recogerEnCocina1">
                                        <label class="form-check-label small" for="recogerEnCocina1">Recoger en Cocina</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto text-end">
                            <h5 class="text-primary mb-0">$99.999</h5>
                        </div>
                    </div>

                    <!-- Producto 2 -->
                    <div class="row g-0 p-3 align-items-center">
                        <div class="col-auto" style="width: 100px;">
                            <div class="border bg-light d-flex align-items-center justify-content-center rounded" style="height: 80px;">
                                <small class="text-muted">Imagen</small>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card-body py-1">
                                <h6 class="card-title mb-1">Producto 2</h6>
                                <p class="card-text text-muted small mb-2">Venta definitiva - No se aceptan devoluciones</p>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    <div class="d-flex align-items-center">
                                        <label class="form-label me-2 mb-0">Cantidad:</label>
                                        <input type="number" min="1" value="1" class="form-control form-control-sm" style="width: 70px;" />
                                    </div>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </button>
                                    <div class="form-check ms-2">
                                        <input class="form-check-input" type="checkbox" value="" id="recogerEnCocina2" checked>
                                        <label class="form-check-label small" for="recogerEnCocina2">Recoger en Cocina</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto text-end">
                            <h5 class="text-primary mb-0">$49.999</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resumen de compra -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resumen del Pedido</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal (2 productos):</span>
                        <span>$149.998</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Envío:</span>
                        <span class="text-success">Gratis</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Impuestos:</span>
                        <span>$29.999</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="h5 text-primary">$179.997</strong>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-dark btn-lg">Proceder con el Pago</button>
                        <a href="~/" class="btn btn-outline-secondary">Continuar comprando</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <style>
        .sticky-top {
            position: -webkit-sticky;
            position: sticky;
            z-index: 1020;
        }
    </style>
}